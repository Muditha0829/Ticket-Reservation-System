            android:padding="8dp"
            android:textStyle="bold"
            android:gravity="center_vertical"
            />

        <TextView
            android:id="@+id/TrainIDTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:padding="8dp"
            android:gravity="center_vertical"
            />
    </LinearLayout>

